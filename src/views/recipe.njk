{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Receita</title>
{% endblock %}

{%block recipes_link %}<b>Receitas</b>{%endblock%}

{% block content %}
    <div id="recipe">
        <img src="{{recipe.image}}" alt="">
        <div id="title_info">
            <h1>{{recipe.title}}</h1>
            <p>por {{recipe.author}}</p>
        </div>
        <div class="recipe_section">
            <h2>Ingredientes</h2>
            <ul>
            {% for item in recipe.ingredients %}
                <li>{{item}}</li>
            {% endfor %}
            </ul>
        </div>
        <div class="recipe_section">
            <h2>Modo de preparo</h2>
            {% for item in recipe.preparation %}
                <p>{{item}}</p>
            {% endfor %}
        </div>
        <div class="recipe_section">
            <h2>Informações adicionais</h2>
            <p>{{recipe.information}}</p>
        </div>
    
    </div>
{% endblock %}